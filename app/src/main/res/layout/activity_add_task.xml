<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddTask">


    <ImageView
        android:id="@+id/bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E7DEFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/data"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="48dp"
        android:adjustViewBounds="true"
        android:padding="0dp"
        android:scaleType="fitCenter"
        android:src="@drawable/data"
        android:text="data"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/add"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:adjustViewBounds="true"
        android:padding="0dp"
        android:scaleType="fitCenter"
        android:src="@drawable/add"
        android:text="add"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/task"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="48dp"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="48dp"
        android:adjustViewBounds="true"
        android:padding="0dp"
        android:scaleType="fitCenter"
        android:src="@drawable/task"
        android:text="task"
        app:layout_constraintStart_toEndOf="@+id/data"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/wish"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="48dp"
        android:layout_marginRight="48dp"
        android:adjustViewBounds="true"
        android:padding="0dp"
        android:scaleType="fitCenter"
        android:src="@drawable/wish"
        android:text="wish"
        app:layout_constraintEnd_toStartOf="@+id/add"
        app:layout_constraintTop_toTopOf="@+id/bg" />

    <ImageView
        android:id="@+id/add_bg"
        android:layout_width="370dp"
        android:layout_height="600dp"
        android:padding="0dp"
        android:scaleType="fitCenter"
        android:src="@drawable/round_rec"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/bg"
        app:layout_constraintVertical_bias="0.877"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/newObj_bg"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/add_bg"
        app:srcCompat="@drawable/circle" />

    <ImageButton
        android:id="@+id/tasks_bg"
        android:layout_width="320dp"
        android:layout_height="200dp"
        android:layout_marginTop="45dp"
        android:padding="0dp"
        android:scaleType="fitCenter"
        android:src="@drawable/round_rec_w"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newObj_bg"
        tools:ignore="MissingConstraints" />


    <ImageView
        android:id="@+id/prize_bg"
        android:layout_width="320dp"
        android:layout_height="200dp"
        android:padding="0dp"
        android:scaleType="fitCenter"
        android:src="@drawable/round_rec_w"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/add_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tasks_bg"
        app:layout_constraintVertical_bias="0.65999997"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/newObj_icon"
        android:layout_width="55dp"
        android:layout_height="55dp"
        app:layout_constraintBottom_toBottomOf="@+id/newObj_bg"
        app:layout_constraintEnd_toEndOf="@+id/newObj_bg"
        app:layout_constraintStart_toStartOf="@+id/newObj_bg"
        app:layout_constraintTop_toTopOf="@+id/newObj_bg"
        app:srcCompat="@drawable/obj" />

    <TextView
        android:id="@+id/prize_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        android:text="Prize"
        android:textColor="#DAACF6"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/situation_bg"
        app:layout_constraintStart_toStartOf="@+id/add_bg"
        app:layout_constraintTop_toBottomOf="@+id/tasks_bg" />

    <TextView
        android:id="@+id/tasks_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:text="Tasks"
        android:textColor="#DAACF6"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/add_bg"
        app:layout_constraintTop_toBottomOf="@+id/newObj_bg" />

    <EditText
        android:id="@+id/task1"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:text="not use over 20 mins everyDay"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tasks_bg" />

    <EditText
        android:id="@+id/task2"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:layout_marginTop="60dp"
        android:text="task2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tasks_bg" />

    <EditText
        android:id="@+id/task3"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:layout_marginTop="110dp"
        android:text="task3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tasks_bg" />

    <EditText
        android:id="@+id/addPrize"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:text="Candy*10"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/prize_bg"
        app:layout_constraintEnd_toEndOf="@+id/prize_bg"
        app:layout_constraintStart_toStartOf="@+id/prize_bg"
        app:layout_constraintTop_toTopOf="@+id/prize_bg"
        app:layout_constraintVertical_bias="0.525" />

</androidx.constraintlayout.widget.ConstraintLayout>